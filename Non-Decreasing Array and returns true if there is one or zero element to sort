import java.util.* ;
import java.io.*; 
public class Solution {
	public static boolean isPossible(int[] arr, int n) {
		
		int count = 0;
		for(int i=0; i < n; i++){
			// sorting in ascending order
			for (int j = i+1; j<n; j++){
				if(arr[i] > arr[i+1]){
					int temp = arr[i] ;
					arr[i] = arr[j];
					arr[j] = arr[i];
					count += 1;
				}
			}
		}
		if(count == 1 || count == 0 ){
			return  true;
		}
		else{
			return false;
		}
	}
}
